<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.ui.move">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"/>
        <activity android:name=".anim.AnimMainActivity"/>
        <activity android:name=".anim.WidgetMoveActivity"/>
        <activity android:name=".anim.WidgetSildeActivity"/>
        <activity android:name=".anim.WidgetPathActivity"/>
        <activity android:name=".anim.FadeScaleActivity"/>
        <activity android:name=".anim.RecolorActivity"/>
        <activity android:name=".anim.RotateActivity"/>
        <activity android:name=".anim.ChangeTextActivity"/>
    </application>

</manifest>